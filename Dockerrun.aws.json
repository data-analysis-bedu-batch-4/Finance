{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "frontend",
            "image": "davidsantander/multi-frontend",
            "hostname": "frontend",
            "essential": false
        },
        {
            "name": "backend",
            "image":"davidsantander/multi-backend",
            "hostname": "backend",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "davidsantander/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["frontend", "backend"]
        }
    ]
}